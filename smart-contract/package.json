    "@types/node": "^20.10.5",
    "chai": "^4.3.10",
    "hardhat": "^2.19.3",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "tailwindcss": "^4.0.11"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.6",
    "dotenv": "^16.5.0"
